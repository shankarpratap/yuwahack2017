@using YuwaWebApp.Models
@{
    ViewBag.Title = "Student List";
}

@model List<YuwaWebApp.Models.StudentDetail>

    <div id="body">
        Click on a student for more details. <br />
        <table id="myTable" class="table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        Nick Name
                    </th>
                    <th>
                        Full Name
                    </th>
                    <th>
                        Gender
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Enrollment Date
                    </th>
                    <th>
                        Village
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        Blood Group
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NickName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DOJ_Yuwa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Village)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BloodGroup)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <style>
        table {
            margin-top: 10%;
            width: 100%;
        }
    </style>
